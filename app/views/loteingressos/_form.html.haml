.panel.panel-primary
  .panel-body
    = simple_form_for @loteingresso, html: { class: "form-horizontal"}, defaults: { input_html: { class: 'form-control' } } do |f|
      = f.error_notification

      .form-group.form-inputs
        .col-lg-6
          = f.input :numero_lote, label: "Número Lote"
          = f.input :preco,  label: "Preço"
          = f.input :quantidade
          = f.association :evento,  label_method: :nome

      .form-group.form-actions
        .col-lg-10.col-lg-offset-2
          = f.button :submit, 'Salvar', :class => "btn btn-success"
