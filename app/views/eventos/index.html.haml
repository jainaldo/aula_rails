%h1 Listing eventos

%table
  %tr
    %th Nome
    %th Categoria
    %th Data
    %th Hora
    %th Empresa
    %th Ambiente
    %th Descricao
    %th
    %th
    %th

  - @eventos.each do |evento|
    %tr
      %td= evento.nome
      %td= evento.categoria
      %td= evento.data
      %td= evento.hora
      %td= evento.empresa.nome
      %td= evento.ambiente.nome
      %td= evento.descricao
      %td= link_to 'Show', evento
      %td= link_to 'Edit', edit_evento_path(evento)
      %td= link_to 'Excluir', evento, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Evento', new_evento_path
