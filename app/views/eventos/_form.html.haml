.panel.panel-primary
  .panel-body
    = simple_form_for @evento, html: { class: "form-horizontal"}, defaults: { input_html: { class: 'form-control' } }  do |f|
      = f.error_notification

      .form-group.form-inputs
        .col-lg-6
          = f.input :nome
          = f.input :categoria
          = f.input :data, as: :string
          = f.input :hora, as: :string
          = f.association :empresa , label_method: :nome
          = f.association :ambiente , label_method: :nome
          = f.input :descricao, label: 'Descrição'

      .form-group.form-actions
        .col-lg-10.col-lg-offset-2
          = f.button :submit, 'Salvar', :class => "btn btn-success"