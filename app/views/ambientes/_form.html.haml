.panel.panel-primary
  .panel-body
    = simple_form_for @ambiente, html: { class: "form-horizontal"}, defaults: { input_html: { class: 'form-control' } } do |f|
      = f.error_notification
      .form-group.form-inputs
        .col-lg-6
          = f.input :nome
          = f.input :capacidade
          = f.input :endereco , label: 'Endereço'
          = f.input :complemento
          = f.input :numero , label: 'Número'
          = f.input :bairro
          = f.input :cidade
          = f.input :estado
          = f.input :cep , label: 'CEP'

      .form-group.form-actions
        .col-lg-10.col-lg-offset-2
          = f.button :submit, 'Salvar', :class => "btn btn-success"
