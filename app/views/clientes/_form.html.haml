.panel.panel-primary
  .panel-body
    = simple_form_for @cliente, html: { class: "form-horizontal"}, defaults: { input_html: { class: 'form-control' } } do |f|
      = f.error_notification
      .form-group.form-inputs
        .col-lg-6
          = f.input :nome
          = f.input :data_nascimento, label: 'Data Nascimento', as: :string
          = f.input :cpf , label: 'CPF'
          = f.input :email
          = f.input :senha
      .form-group.form-actions
        .col-lg-10.col-lg-offset-2
          = f.button :submit, 'Salvar', :class => "btn btn-success"
