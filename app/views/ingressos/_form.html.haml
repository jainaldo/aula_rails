.panel.panel-default
  .panel-body
    = simple_form_for @ingresso, html: { class: "form-horizontal"}, defaults: { input_html: { class: 'form-control' } } do |f|
      = f.error_notification

      .form-group.form-inputs
        .col-lg-6
          = f.input :cadeira_numerada, label: 'Cadeira Númerada'
          = f.input :area, label: 'Área'
          = f.association :cliente, label_method: :nome
          = f.association :loteingresso, label_method: :numero_lote, label: 'Lote Ingresso'

      .form-group.form-actions
        .col-lg-10.col-lg-offset-2
          = f.button :submit, 'Salvar', :class => "btn btn-success"
